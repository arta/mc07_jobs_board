#jobs
  -@jobs.each do |job|
    .job
      %h2= link_to job.title, job
      %p= job.description
      %p
        -if job.user == current_user
          =link_to 'Edit', [:edit, job], class:'btn btn-small btn-default'
          =link_to 'Delete', job, method: :delete, data:{ confirm:'Are you sure?' }, class:'btn btn-small btn-default'
